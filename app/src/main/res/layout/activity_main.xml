<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/linearlayout"
    android:background="@drawable/bg_prime"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:scaleType="centerInside"
        android:id="@+id/logo"
        android:background="@drawable/logo_prime"
        android:maxHeight="375dp"
        android:maxWidth="751dp"
        android:minHeight="375dp"
        android:minWidth="751dp"
        android:layout_gravity="top|center_vertical"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/numberDisplay"
        android:layout_gravity="center_horizontal"
        android:paddingTop="30dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="48dp"
        android:textIsSelectable="true"
        android:paddingBottom="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES, IT IS!"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickPrime" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I THINK NOT."
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickComposite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/scoreDisplay"
        android:layout_gravity="center_horizontal"
        android:gravity="right"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:paddingTop="10dp" />

</LinearLayout>